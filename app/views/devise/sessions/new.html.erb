<div class="row" style="text-align:center; padding: 20px 0px;">
  <%= link_to "Google Signin", user_omniauth_authorize_path(:google), {:class => "btn btn-primary btn-large"} %>
</div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
  <fieldset>
	<legend>Old-School Sign in</legend>
  <%= devise_error_messages! %>
	<div class="control-group">
      <%= f.label :email, :class => "control-label" %>
        <div class="controls">
          <%= f.email_field :email, :class => "input-xlarge" , :placeholder => "me@example.com" %>
        </div>
    </div>

    <div class="control-group">
      <%= f.label :password, :class => "control-label" %>
        <div class="controls">
          <%= f.password_field :password, :class => "input-xlarge" , :placeholder => "Top Secret Password" %>
        </div>
    </div>

	<% if devise_mapping.rememberable? -%>
	  <div class="control-group">
        <%= f.label :remember_me, :class => "control-label" %>
        <div class="controls">
          <label class="checkbox">
          	<%= f.check_box :remember_me %>
            Remember
          </label>
        </div>
      </div>
	<% end -%>

	<div class="form-actions"><%= f.submit "Sign in", :class => "btn btn-primary" %><%= render "links" %></div>
  </fieldset>
<% end %>