<h2>Edit User</h2>

<%= form_tag("/user_settings/update", :method => 'post') do %>

  <div><%= label_tag(:email, "Email") %><br />
  <%= email_field_tag(:email) %></div>
  
  <div><%= label_tag(:name, "Name") %><br />
  <%= text_field_tag(:name) %></div>
  
  <div><%= label_tag(:phone_number, "Phone Number") %><br />
  <%= text_field_tag(:phone_number) %></div>

  <div><%= submit_tag("Update", :class => 'btn') %></div>
<% end %>
