<h1>Listing decisions</h1>

<table>
  <tr>
    <th>Title</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @decisions.each do |decision| %>
  <tr>
    <td><%= decision.title %></td>
    <td><%= decision.user_id %></td>
    <td><%= link_to 'Show', decision %></td>
    <td><%= link_to 'Edit', edit_decision_path(decision) %></td>
    <td><%= link_to 'Destroy', decision, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

